@model IEnumerable<ExpenceTracker.Models.Expense>

<div class="border p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Expense List</h2>
        </div>
        <div class="col-6 text-end ">
            <a asp-action="Create" class=" btn btn-primary ">Create New Item </a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" sytle="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                       Expense Type
                    </th>
                    <th>
                        Modification
                    </th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td width="25%">@item.ExpenseName</td>
                        <td width="25%">@item.Amount</td>
                        <td width="25%">@item.ExpenseType.Name</td>
                        <td width="25%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Expense" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>




        </table>
    }
    else
    {
        <p>No items Create yet</p>
    }


</div>

.