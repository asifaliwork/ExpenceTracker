@model ExpenceTracker.Models.Items
<form asp-controller="Item" asp-action="Update" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">

            <h2 class="text-primary"> Update Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        Item Name
                    </div>
                    <div class="col-4">
                        Borrower
                    </div>

                    <div class="col-4">
                        Lender
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ItemName" class="form-control" />
                        <span asp-validation-for="ItemName" class="text-danger"></span>

                    </div>
                    <div class="col-4">
                        <input asp-for="Borrower"  class="form-control" />
                        <span asp-validation-for="Borrower" class="text-danger"></span>
                    </div>

                    <div class="col-4">
                        <input asp-for="Lender"  class="form-control" />
                        <span asp-validation-for="Lender" class="text-danger"></span>

                    </div>
                    
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-8 text-center row">
                        <div class="col-4">
                            <input type="submit" class="btn btn-danger w-75" value="Update" />
                        </div>
                        <div class="col-4">
                            <a asp-action="Index" class="btn btn-success">Back</a>

                        </div>

                    </div>

                </div>

            </div>

        </div>
    </div>
</form>


