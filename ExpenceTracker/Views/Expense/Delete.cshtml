@model ExpenceTracker.Models.Expense
<form asp-controller="Expense" asp-action="DeletePost" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">

            <h2 class="text-primary"> Delete Expence</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        Expence Name
                    </div>
                    <div class="col-4">
                        Amount
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ExpenseName" disabled class="form-control" />
                        
                    </div>
                    <div class="col-6">
                        <input asp-for="Amount" disabled class="form-control" />

                    </div>

                </div>
                <br />
                <div class="form-group row">
                    <div class="col-10 offset-2 text-center row">
                        <div class="col-5">
                            <input type="submit" class="btn btn-danger w-75 mx-1" value="Delete" />
                        </div>
                        <div class="col-5">
                            <a asp-action="Index" class="btn btn-success w-75 mx-1">Back</a>
                        </div>


                    </div>

                </div>

            </div>

        </div>
    </div>
</form>


